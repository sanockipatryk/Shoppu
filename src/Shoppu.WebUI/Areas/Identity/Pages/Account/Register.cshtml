@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="container">
	<div class="columns is-centered mx-0">
		<div class="column is-10-mobile is-offset-1-mobile is-half">
			<div class="card">
				<div class="card-content">
					<h1 class="title is-4 has-text-centered">Create a new account</h1>
					<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="field">
							<label class="label" asp-for="Input.Email"></label>
							<div class="control">
								<input asp-for="Input.Email" class="input" type="email" autocomplete="username"
									aria-required="true" placeholder="Enter username" />
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
						</div>
						<div class="field">
							<label class="label" asp-for="Input.Password"></label>
							<div class="control">
								<input asp-for="Input.Password" class="input" type="password" aria-required="true"
									placeholder="Enter password" />
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
						</div>
						<div class="field">
							<label class="label" asp-for="Input.ConfirmPassword"></label>
							<div class="control">
								<input asp-for="Input.ConfirmPassword" class="input" type="password"
									aria-required="true" placeholder="Confirm password" />
								<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>
						</div>
						<div class="field">
							<div class="control has-text-centered">
								<button id="registerSubmit" type="submit" class="button is-primary">Register</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
